    <ContentPage.Content>
        <StackLayout>
            <Image Source="smd.png"/>
            <Entry Placeholder="Name of the Drug"/>
            <Entry Placeholder="Who prescribed it?*"/>
            <Button Text="Add" TextColor="White" BackgroundColor="IndianRed" Clicked="Button_Clicked"/>
            <Label/>
            <Label/>
            <Label Text="*If the Prescription was made by a Doctor Write 'Doctor' ,if not Write 'SelfTake'" TextColor="Gray" FontSize="16"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>
