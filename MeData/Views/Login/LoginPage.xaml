<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" x:Class="MeData.Views.Login.LoginPage">
    <ContentPage.Content>
       

    <ScrollView>
    <StackLayout Spacing="20" VerticalOptions="CenterAndExpand" Margin="20">
        <Image Source="MeData.png" />
       <Entry Visual="Material" FontSize="24" Placeholder="National ID Number" Text="{Binding UserName}"/>
        <Entry Visual="Material" Placeholder="Password" FontSize="24" IsPassword="True" Text="{Binding Password}" />
        <Button BackgroundColor="IndianRed" TextColor="White" Text="Login" Command="{Binding LoginUser}"/>
        <Label Text="                           Don't Have an account? " TextColor="Gray" FontSize="13"/>
        <Button BackgroundColor="IndianRed" TextColor="White" Text="Create Account" Command="{Binding GoToRegistration}"/>
    </StackLayout>
        </ScrollView>

    </ContentPage.Content>
</ContentPage>
